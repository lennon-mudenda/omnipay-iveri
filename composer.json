{
    "name": "lennon-mudenda/omnipay-iveri",
    "description": "iVeri and Nedbank Payments Gateway that follows the Omnipay Protocol",
    "keywords": [
        "lennon mudenda",
        "omnipay iveri"
    ],
    "homepage": "https://github.com/lennon-mudenda/omnipay-iveri",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lennon Mudenda",
            "email": "lensig13@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "nyholm/psr7": "^1.8",
        "omnipay/common": "^3",
        "php-http/httplug": "^2.4",
        "symfony/http-client": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\IVeri\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\IVeri\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
